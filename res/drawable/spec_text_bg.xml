<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="15dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/org_light"/>
            <padding
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp"
                android:left="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="15dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <padding
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp"
                android:left="5dp"/>
        </shape>
    </item>
</selector>