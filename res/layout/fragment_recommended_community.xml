<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/gray_white"
             tools:context="com.project.mgjandroid.ui.fragment.RecommendedCommunityFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x26"
            android:text="说说"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x26"
            android:text="说说"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x8"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x26"
            android:text="说说"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x8"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x26"
            android:text="说说"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x8"
            />
        <LinearLayout
            android:id="@+id/com_more_tag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/com_more_tag_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/com_close"
                />

            <TextView
                android:id="@+id/com_more_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/x26"
                android:text="更多"
                android:gravity="center"
                android:textColor="@color/mine_number_color_grey"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/com_gray_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_gray_line"
        />

    <com.project.mgjandroid.ui.view.newpulltorefresh.PullToRefreshListView
        android:id="@+id/recommended_community_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        >

    </com.project.mgjandroid.ui.view.newpulltorefresh.PullToRefreshListView>

</LinearLayout>
