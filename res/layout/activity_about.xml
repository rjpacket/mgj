<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_about"
    android:orientation="vertical"
    tools:context="com.project.mgjandroid.ui.activity.AboutActivity"
    >

    <RelativeLayout
        android:id="@+id/evaluate_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_bg"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10">

        <ImageView
            android:id="@+id/about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/evaluate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/about_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_bar_text_size"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x75"
        android:contentDescription="@string/app_name"
        android:src="@drawable/about_icon"
        />

    <TextView
        android:id="@+id/about_version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x28"
        android:background="@drawable/bg_yellow_rect_circle"
        android:paddingBottom="@dimen/x2"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x2"
        android:text=""
        android:textColor="@color/orange_ff"
        android:textSize="14sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textColor="@color/common_black_text"
                android:textSize="20sp"
                />

            <View
                android:layout_width="@dimen/x160"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/x14"
                android:background="@color/common_gray_line"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x25"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shangwu_hezuo"
                android:textColor="@color/common_black_text"
                android:textSize="20sp"
                />

            <View
                android:layout_width="@dimen/x160"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/x14"
                android:background="@color/common_gray_line"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/x6"
            >

            <TextView
                android:id="@+id/user_service_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x6"
                android:layout_marginRight="@dimen/x6"
                android:background="@drawable/bg_about_text"
                android:text="@string/yonghu_fuwu_xieyi"
                android:textColor="#575656"
                android:textSize="14sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/common_black_text"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x6"
                android:background="@drawable/bg_about_text"
                android:text="免责声明"
                android:textColor="#575656"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x4"
            android:text="江西赛宝网络科技有限公司"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x6"
            android:text="\@2016 Saibao Network Technology Co.,ltd"
            />
    </LinearLayout>
</LinearLayout>
