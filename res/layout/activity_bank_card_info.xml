<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_white"
    tools:context="com.project.mgjandroid.ui.activity.BankCardInfoActivity"
    >
    <include
        layout="@layout/actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/x15"
            />
        <EditText
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="持卡人姓名"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/x6"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose_bank_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行类型:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/x15"
            />
        <TextView
            android:id="@+id/bank_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/x6"
            android:visibility="visible"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_3"
            android:layout_marginRight="@dimen/x10"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right_gray"
            android:layout_marginRight="@dimen/x15"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/add_card_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="16sp"
        android:background="@drawable/bg_login_orange_button"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/x13"
        android:paddingBottom="@dimen/x13"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x90"
        />
</LinearLayout>
