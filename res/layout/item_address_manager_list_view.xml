<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x14"
        android:paddingBottom="@dimen/x13"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        >
        <ImageView
            android:id="@+id/address_iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x4"
            android:src="@drawable/check_off"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_manage_item_username"
            android:layout_toRightOf="@+id/address_iv_choose"
            android:textColor="#353535"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/address_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_manage_item_user_sex"
            android:layout_toRightOf="@id/address_name"
            android:textColor="#353535"
            android:layout_marginLeft="@dimen/x13"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/address_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_manage_item_user_phone"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@id/address_sex"
            android:textColor="#353535"
            android:layout_marginLeft="@dimen/x13"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/address_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_manage_item_user_address"
            android:layout_below="@id/address_name"
            android:layout_alignLeft="@id/address_name"
            android:layout_marginTop="@dimen/x9"
            android:layout_marginRight="@dimen/x50"
            android:singleLine="true"
            android:ellipsize="start"
            android:textSize="11sp"
            android:textColor="#737272"
            />

        <LinearLayout
            android:id="@+id/ll_address_unreach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address_unreach"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:textSize="10sp"
                android:textColor="@color/red_weibo"
                android:text="@string/address_unreach"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/address_iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:background="@drawable/address_icon_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>