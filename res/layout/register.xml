<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ededed"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/register_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/org_light"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/title_bar_text_size"
            />
    </RelativeLayout>


    <EditText
        android:id="@+id/register_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="手机/邮箱/用户名"
        android:padding="@dimen/x15"
        android:singleLine="true"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/x10"
        />

    <Button
        android:id="@+id/register_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步，获取验证码"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@drawable/bg_register_gray_button"
        android:textColor="@color/white"
        android:padding="@dimen/x10"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agree_our_protocol"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:textColor="#a2a2a2"
        />
</LinearLayout>
