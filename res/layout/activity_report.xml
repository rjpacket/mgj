<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3"
    tools:context="com.project.mgjandroid.ui.activity.ReportActivity"
    >
    <include
        layout="@layout/actionbar" />

    <TextView
        android:id="@+id/report_who"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x41"
        android:background="@drawable/bg_mine_stroke_grey"
        android:textSize="15sp"
        android:textColor="@color/color_3"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/report_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x15"
        android:textSize="15sp"
        android:textColor="@color/color_3"
        android:lines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mine_stroke_grey"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/x15">

            <TextView
                android:id="@+id/report_act_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="垃圾营销"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:drawableLeft="@drawable/bg_report_check"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/x10"
                />

            <TextView
                android:id="@+id/report_act_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有害信息"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:drawableLeft="@drawable/bg_report_check"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/x10"
                android:layout_marginTop="@dimen/x30"
                />

            <TextView
                android:id="@+id/report_act_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淫秽色情"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:drawableLeft="@drawable/bg_report_check"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/x10"
                android:layout_marginTop="@dimen/x30"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/x15">

            <TextView
                android:id="@+id/report_act_tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不实信息"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:drawableLeft="@drawable/bg_report_check"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/x10"
                />

            <TextView
                android:id="@+id/report_act_tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违法信息"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:drawableLeft="@drawable/bg_report_check"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/x10"
                android:layout_marginTop="@dimen/x30"
                />

            <TextView
                android:id="@+id/report_act_tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人身攻击"
                android:textColor="@color/color_3"
                android:textSize="15sp"
                android:drawableLeft="@drawable/bg_report_check"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/x10"
                android:layout_marginTop="@dimen/x30"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="举报"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/bg_login_orange_button"/>

</LinearLayout>
