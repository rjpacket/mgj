<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.mgjandroid.ui.activity.EditUserNameActivity"
    android:orientation="vertical"
    android:background="@color/common_app_background"
    >
    <RelativeLayout
        android:id="@+id/edit_user_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_bg"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >

        <ImageView
            android:id="@+id/edit_user_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/edit_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/update_username"
            android:textColor="@color/white"
            android:textSize="@dimen/title_bar_text_size"
            />
    </RelativeLayout>


    <EditText
        android:id="@+id/edit_user_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="用户名"
        android:padding="@dimen/x15"
        android:singleLine="true"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/x10"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:text="用户名可包含字母、数字、汉字，不能有空格和特殊字符（2-12个字符之间）"
        android:textSize="10sp"
        android:textColor="@color/common_gray_text"
        android:gravity="center"
        />

    <Button
        android:id="@+id/edit_user_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认修改"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@drawable/bg_login_orange_button"
        android:textColor="@color/white"
        android:padding="@dimen/x10"
        android:textSize="16sp"
        />
</LinearLayout>
