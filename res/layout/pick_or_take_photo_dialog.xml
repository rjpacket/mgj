<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancel"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:background="@drawable/userupdatebt"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/x5">

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/x15"
            android:text="@string/user_info_take_photo"
            android:textColor="@color/title_bar_bg" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DEDEDE" />

        <Button
            android:id="@+id/btn_pick_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/x15"
            android:gravity="center"
            android:text="@string/user_info_pick_photo"
            android:textColor="@color/title_bar_bg" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x8"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:padding="@dimen/x15"
        android:background="@drawable/userupdate_cancel"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/title_bar_bg" />

</RelativeLayout>