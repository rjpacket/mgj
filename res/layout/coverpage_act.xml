<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/img_add_hide"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_add"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/buy_count_hide"
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_add_hide"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/gray_txt"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_minus_hide"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/buy_count_hide"
            android:background="@drawable/icon_reduce"
            android:scaleType="centerCrop"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_count_hide_spec1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/goods_item_choose_spec1"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x20"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_spec_circle"
            android:text="选规格"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/goods_item_tv_buy_count_spec1"
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/x20"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/gray_txt"
            android:textSize="12sp"
            android:visibility="invisible"
            android:layout_toLeftOf="@id/goods_item_choose_spec1"
            />

        <ImageView
            android:id="@+id/goods_item_img_minus_spec1"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:background="@drawable/icon_reduce"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:layout_toLeftOf="@id/goods_item_tv_buy_count_spec1"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wellcome_page"
        android:scaleType="centerCrop"
        />

</RelativeLayout>