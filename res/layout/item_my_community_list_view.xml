<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/com_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x15"
            >
            <com.project.mgjandroid.ui.view.CornerImageView
                android:id="@+id/com_head_view"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:src="@drawable/user_avatar"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/com_head_view"
                android:layout_marginLeft="@dimen/x10"
                android:layout_alignTop="@id/com_head_view"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/com_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/com_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="闵女士"
                    android:layout_toRightOf="@id/com_sex"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/color_3"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/com_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-06-02"
                android:layout_toRightOf="@id/com_head_view"
                android:layout_marginLeft="@dimen/x10"
                android:layout_alignBottom="@id/com_head_view"
                android:textColor="@color/color_6"
                />

            <RelativeLayout
                android:id="@+id/com_more_label"
                android:layout_width="@dimen/x40"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/com_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/category"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/com_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举报"
                    android:textColor="@color/color_6"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/com_tag_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@id/com_more_label"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                >

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/com_content_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_user_info"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            >

            <ImageView
                android:id="@+id/com_content_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/content_open"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/x15"
                />

            <TextView
                android:id="@+id/com_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信文案应该改为这样的一句话：【马管家】您有一笔90元的银行卡提现，预计会在您有一笔90元的银行卡提现，预计会在您有一笔90元的银行卡提现，预计会在"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/gray_text_0"
                android:layout_toLeftOf="@id/com_content_icon"
                />

            <TextView
                android:id="@+id/com_content_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信文案应该改为这样的一句话：【马管家】您有一笔90元的银行卡提现，预计会在您有一笔90元的银行卡提现，预计会在您有一笔90元的银行卡提现，预计会在"
                android:textColor="@color/gray_text_0"
                android:layout_toLeftOf="@id/com_content_icon"
                android:visibility="gone"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/com_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/x15"
            android:layout_below="@id/com_content_label"
            >

        </LinearLayout>

        <TextView
            android:id="@+id/com_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/com_location"
            android:text="湖南新化"
            android:textColor="@color/gray_1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:singleLine="true"
            android:layout_below="@id/com_image_container"
            android:drawablePadding="@dimen/x10"
            />

        <View
            android:id="@+id/com_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/x15"
            android:layout_below="@id/com_address"
            android:background="@color/common_gray_line" />

        <LinearLayout
            android:id="@+id/op_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_below="@id/com_line"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/com_zan_label"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/com_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zan"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="@dimen/x5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_label"
                    />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/gray_white"
            android:layout_below="@id/op_label"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/com_check_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_transparent"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交审核中"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</FrameLayout>