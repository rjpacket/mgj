<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_white">

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="@dimen/x25"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/dialog_address_unreach"/>

    <TextView
        android:id="@+id/dialod_address_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25"
        android:textSize="16sp"
        android:textColor="@color/gray_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x25">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dialod_address_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/org_yellow"
            android:text="@string/dialog_address_confirm"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialod_address_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/org_yellow"
            android:textSize="16sp"
            android:text="@string/dialog_address_cancel"
            android:layout_marginLeft="@dimen/x25"/>
    </LinearLayout>

</LinearLayout>