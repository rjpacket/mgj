<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_white"
    tools:context="com.project.mgjandroid.ui.activity.JobMessageActivity"
    >

    <include layout="@layout/actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/photo_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x280">

                <ImageView
                    android:id="@+id/home_making_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/home_making_default"/>

                <ImageView
                    android:id="@+id/home_making_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:src="@drawable/take_photo"/>

                <TextView
                    android:id="@+id/tv_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍个照呗"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/home_making_photo"
                    android:paddingTop="@dimen/x15"/>

                <ImageView
                    android:id="@+id/home_making_photo_2"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@drawable/take_photo"
                    android:visibility="gone"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/et_bg_publish_info"
                android:layout_marginTop="@dimen/x7"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标\u3000\u3000题"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <EditText
                        android:id="@+id/home_making_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:hint="请填写"
                        android:textColorHint="@color/grey_white_pressed"
                        android:textSize="14sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_3"
                        android:maxLength="30"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray_line"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身\u3000\u3000份"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <RelativeLayout
                        android:id="@+id/home_making_choose_type"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:id="@+id/home_making_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="请选择"
                            android:textColorHint="@color/grey_white_pressed"
                            android:textSize="14sp"
                            android:background="@null"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_3"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow_gray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x10"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray_line"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务类别"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <RelativeLayout
                        android:id="@+id/home_making_choose_category"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:id="@+id/home_making_category"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="请选择"
                            android:textColorHint="@color/grey_white_pressed"
                            android:textSize="14sp"
                            android:background="@null"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_3"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow_gray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x10"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray_line"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务特色"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <EditText
                        android:id="@+id/home_making_feature"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:hint="请填写"
                        android:textColorHint="@color/grey_white_pressed"
                        android:textSize="14sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_3"
                        android:maxLength="30"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/et_bg_publish_info"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务区域"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <EditText
                        android:id="@+id/home_making_location"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:hint="请填写"
                        android:textColorHint="@color/grey_white_pressed"
                        android:textSize="14sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_3"
                        android:maxLength="16"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray_line"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布区域"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <RelativeLayout
                        android:id="@+id/home_making_choose_area"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:id="@+id/home_making_area"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="请选择"
                            android:textColorHint="@color/grey_white_pressed"
                            android:textSize="14sp"
                            android:background="@null"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_3"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_arrow_gray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x10"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x190"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/x5">

                <EditText
                    android:id="@+id/home_making_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请填写详细信息"
                    android:textColorHint="@color/grey_white_pressed"
                    android:maxLength="500"
                    android:lines="8"
                    android:textColor="@color/color_3"
                    android:background="@drawable/et_bg_publish_info"
                    android:padding="@dimen/x10"
                    android:textSize="14sp"
                    android:gravity="top"
                    />

                <TextView
                    android:id="@+id/tv_content_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:textColor="@color/grey_white_pressed"
                    android:textSize="12sp"
                    android:text="0/500字"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/et_bg_publish_info"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <EditText
                        android:id="@+id/home_making_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1.6"
                        android:layout_height="match_parent"
                        android:hint="请填写"
                        android:textColorHint="@color/grey_white_pressed"
                        android:maxLength="11"
                        android:textSize="14sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:textColor="@color/color_3"
                        />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/home_making_get_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="获取验证码"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:padding="@dimen/x7"
                            android:gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/bg_job_get_code_shape"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/home_making_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更改"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_red_shape"
                            android:paddingLeft="@dimen/x13"
                            android:paddingTop="@dimen/x7"
                            android:paddingRight="@dimen/x13"
                            android:paddingBottom="@dimen/x7"
                            android:visibility="visible"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:id="@+id/home_making_get_code_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray_line"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/home_making_code_label"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验证码\u3000"
                        android:textColor="@color/color_3"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/x10"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/x14"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/common_gray_line"/>

                    <EditText
                        android:id="@+id/home_making_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:hint="请填写"
                        android:textColorHint="@color/grey_white_pressed"
                        android:textSize="14sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_3"
                        android:inputType="number"
                        />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/home_making_publish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x43"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/bg_login_orange_button"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/x25"
                android:layout_marginBottom="@dimen/x25"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
