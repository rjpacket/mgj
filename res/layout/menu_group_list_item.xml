<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/x45"
    android:gravity="center_vertical"
    android:background="@color/gray_bg">

    <ImageView
        android:id="@+id/menu_item_classify_iv"
        android:layout_width="@dimen/x19"
        android:layout_height="@dimen/x14"
        android:layout_marginLeft="@dimen/x10"
        android:paddingRight="@dimen/x5"
        android:scaleType="centerCrop"
        android:src="@drawable/jian"/>

    <TextView
        android:id="@+id/menu_item_classify_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="全部商家"
        android:textColor="@color/gray_1"/>


    <TextView
        android:id="@+id/menu_item_classify_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x12"
        android:gravity="center"
        android:textSize="10sp"
        android:text="288"
        android:background="@drawable/menu_merchant_count"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/menu_item_classify_iv_to_child"
        android:layout_width="@dimen/x10"
        android:layout_height="@dimen/x10"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:scaleType="centerCrop"
        android:src="@drawable/triangle"/>

</LinearLayout>