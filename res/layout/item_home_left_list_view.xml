<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f2f2f2"
        android:padding="@dimen/x10"
        >
        <ImageView
            android:id="@+id/home_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_merchants"
            android:textColor="@color/common_black_text"
            android:layout_toRightOf="@id/home_left_icon"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/home_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="359"
            android:layout_toLeftOf="@id/home_right_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            />
    </RelativeLayout>
</LinearLayout>