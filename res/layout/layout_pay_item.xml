<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/pay_alipay"
        android:layout_marginTop="@dimen/x1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/pay_icon"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:background="@drawable/pay_icon_alipay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/pay_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            >
            <TextView
                android:id="@+id/pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alipay"
                android:textSize="15sp"
                android:textColor="@color/common_black_text"
                />
            <TextView
                android:id="@+id/pay_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alipay_recommend"
                android:textSize="10sp"
                android:textColor="@color/common_gray_text"
                android:layout_marginTop="@dimen/x5"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/pay_check"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x25"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_check_or_uncheck"
            />
    </RelativeLayout>
</LinearLayout>